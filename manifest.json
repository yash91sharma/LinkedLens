{
  "manifest_version": 3,
  "name": "LinkedLens",
  "version": "1.0.0",
  "description": "Browse Linkedin with the power of AI",
  "permissions": ["storage", "activeTab", "tabs"],
  "host_permissions": [
    "https://api.openai.com/*",
    "https://generativelanguage.googleapis.com/*",
    "http://localhost:*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["llm-utils.js", "content.js"]
    }
  ],
  "options_page": "options.html"
}
